<Window x:Class="Stores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Sales="clr-namespace:Stores.View.View.Sales;assembly=Stores.View"
        xmlns:Production="clr-namespace:Stores.View.View.Production;assembly=Stores.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0">
            <TabItem Header="Sales">
                <Sales:SalesView
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="5">
                </Sales:SalesView>
            </TabItem>
            <TabItem Header="Production">
                <Production:ProductionView
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="5">
                </Production:ProductionView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
