<Window x:Class="WPF_ClassWork_14_12_Task_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ClassWork_14_12_Task_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="First" Margin="5" BorderBrush="Blue" BorderThickness="5"></Button>
        <Button Grid.Column="0" Grid.Row="1" Content="Second" Margin="5" BorderBrush="Yellow" BorderThickness="5"></Button>
        <Button Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Content="Third" Margin="5" BorderBrush="Green" BorderThickness="5"></Button>
    </Grid>
</Window>
