    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Ellipse Grid.Column="1" Grid.Row="0" Width="{Binding ElementName=HeightSlider, Path=Value}" Height="{Binding ElementName=WidthSlider, Path=Value}" Fill="Brown"></Ellipse>
        <Slider x:Name="HeightSlider" Grid.Column="1" Grid.Row="1" Minimum="0" Maximum="100" Value="20"></Slider>
        <Slider x:Name="WidthSlider" Grid.Column="2" Grid.Row="1" Minimum="0" Maximum="100" Value="20"></Slider>
        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding ElementName=HeightSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding ElementName=WidthSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </Grid>
