<UserControl x:Class="CustomerWPF_25_01.View.SelectedCustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerWPF_25_01.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Margin="10" Text="{Binding FirstName}"></TextBox>
        <TextBox Grid.Column="0" Grid.Row="1" Margin="10" Text="{Binding LastName}"></TextBox>
        <TextBox Grid.Column="0" Grid.Row="2" Margin="10" Text="{Binding City}"></TextBox>
    </Grid>
</UserControl>
